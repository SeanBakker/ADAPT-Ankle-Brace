<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSecondary"
            android:textStyle="bold"
            android:text="Add Completed Exercise Data Form"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill out the details below to add exercise data."
            android:textSize="14sp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/requiredFieldsFormText"
            android:textSize="14sp"
            android:textColor="@color/red_1"
            android:layout_gravity="center"
            android:paddingBottom="20dp" />

        <!-- Exercise Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Name:"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asteriskSymbol"
                android:textSize="16sp"
                android:paddingHorizontal="5dp"
                android:textColor="@color/red_1" />
        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/exerciseNameDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select or type exercise name"
            android:inputType="text"
            android:completionThreshold="0" />

        <!-- Number of Sets -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Sets:"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asteriskSymbol"
                android:textSize="16sp"
                android:paddingHorizontal="5dp"
                android:textColor="@color/red_1" />
        </LinearLayout>

        <EditText
            android:id="@+id/numSetsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 3"
            android:inputType="number" />

        <!-- Number of Reps -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Reps:"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asteriskSymbol"
                android:textSize="16sp"
                android:paddingHorizontal="5dp"
                android:textColor="@color/red_1" />
        </LinearLayout>

        <EditText
            android:id="@+id/numRepsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 10"
            android:inputType="number" />

        <!-- Hold Duration -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hold Duration (in seconds):"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asteriskSymbol"
                android:textSize="16sp"
                android:paddingHorizontal="5dp"
                android:textColor="@color/red_1" />
        </LinearLayout>

        <EditText
            android:id="@+id/holdDurationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 5"
            android:inputType="number" />

        <!-- Tension Level -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tensionRange"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asteriskSymbol"
                android:textSize="16sp"
                android:paddingHorizontal="5dp"
                android:textColor="@color/red_1" />
        </LinearLayout>

        <EditText
            android:id="@+id/tensionLevelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 5"
            android:inputType="number" />

        <!-- Time of Completion -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of Completion:"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary" />

        <EditText
            android:id="@+id/timeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select time"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:inputType="none"
            android:textSize="16sp" />

        <!-- Difficulty Level -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/difficultyRange"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary" />

        <EditText
            android:id="@+id/difficultyLevelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 5"
            android:inputType="number" />

        <!-- Comments -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments:"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary" />

        <EditText
            android:id="@+id/commentsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., comments about difficulty"
            android:inputType="text" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/addExerciseDataBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Exercise Data"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
