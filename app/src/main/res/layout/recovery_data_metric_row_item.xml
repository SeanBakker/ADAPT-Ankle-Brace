<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSecondaryVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Selection Checkbox -->
        <CheckBox
            android:id="@+id/selectRowCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:buttonTint="?attr/colorPrimaryVariant"
            android:gravity="center" />

        <!-- Metric Name -->
        <TextView
            android:id="@+id/metricName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:textSize="16sp"
            android:textColor="?attr/colorOnPrimary"
            android:text="@string/metricName"
            android:gravity="center" />

        <!-- Completion Time -->
        <EditText
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:hint="@string/time"
            android:inputType="text"
            android:textColorHint="@color/grey_3"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center" />

        <!-- View Metrics Button -->
        <Button
            android:id="@+id/viewMetricsBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="@string/viewBtn"
            android:gravity="center" />

        <!-- Difficulty -->
        <EditText
            android:id="@+id/difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/difficulty"
            android:inputType="number"
            android:textColorHint="@color/grey_3"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center" />

        <!-- Comments -->
        <EditText
            android:id="@+id/comments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:hint="@string/comments"
            android:inputType="text"
            android:textColorHint="@color/grey_3"
            android:textColor="?attr/colorOnPrimary"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
