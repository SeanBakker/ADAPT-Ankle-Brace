<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Metric Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recorded Metrics:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground" />

    <!-- ROM Plantar/Dorsiflexion -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plantar/Dorsiflexion Total Range:"
            android:textColor="?attr/colorOnSecondary" />

        <TextView
            android:id="@+id/romPlantarDorsiflexionRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zeroDegrees"
            android:textColor="?attr/colorOnSecondary"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- ROM Inversion/Eversion -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inversion/Eversion Total Range:"
            android:textColor="?attr/colorOnSecondary" />

        <TextView
            android:id="@+id/romInversionEversionRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zeroDegrees"
            android:textColor="?attr/colorOnSecondary"
            android:layout_marginStart="4dp" />
    </LinearLayout>
</LinearLayout>
