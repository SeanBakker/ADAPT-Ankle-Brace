<resources>
    <!-- Base application theme -->
    <style name="Theme.AdaptAnkleBrace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryVariant">@color/lightPrimaryVariant</item>
        <item name="colorOnPrimary">@color/lightOnPrimary</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/lightSecondary</item>
        <item name="colorSecondaryVariant">@color/lightSecondaryVariant</item>
        <item name="colorOnSecondary">@color/lightOnSecondary</item>
        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/black</item>
        <item name="colorOnTertiary">@color/white</item>
        <!-- Background color -->
        <item name="backgroundColor">@color/lightBackground</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>
        <item name="colorOnBackground">@color/lightOnBackground</item>
        <item name="colorSurface">@color/grey_1</item>
        <!-- Additional colors -->
        <item name="colorControlNormal">@color/lightPrimaryVariant</item>
        <item name="colorControlActivated">@color/lightPrimaryVariant</item>
        <item name="colorAccent">@color/lightPrimaryVariant</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Date picker style -->
        <item name="android:datePickerDialogTheme">@style/AdaptDateTimePickerStyle</item>
        <item name="android:timePickerDialogTheme">@style/AdaptDateTimePickerStyle</item>
    </style>

    <style name="AdaptDateTimePickerStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorAccent">@color/lightPrimary</item>
        <item name="colorOnSurface">@color/lightOnPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/lightOnPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/lightOnPrimary</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/lightOnPrimary</item>
        <item name="android:textColorTertiary">@color/lightOnPrimary</item>
        <item name="android:textColorTertiaryInverse">@color/lightOnPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DateTimePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DateTimePickerButtonStyle</item>
    </style>

    <style name="DateTimePickerButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/lightOnPrimary</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>
