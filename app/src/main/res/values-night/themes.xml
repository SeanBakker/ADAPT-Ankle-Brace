<resources>
    <!-- Base application theme -->
    <style name="Theme.AdaptAnkleBrace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/nightPrimary</item>
        <item name="colorPrimaryVariant">@color/nightPrimaryVariant</item>
        <item name="colorOnPrimary">@color/nightOnPrimary</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/nightSecondary</item>
        <item name="colorSecondaryVariant">@color/nightSecondaryVariant</item>
        <item name="colorOnSecondary">@color/nightOnSecondary</item>
        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/black</item>
        <item name="colorOnTertiary">@color/white</item>
        <!-- Background color -->
        <item name="backgroundColor">@color/nightBackground</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>
        <item name="colorOnBackground">@color/nightOnBackground</item>
        <item name="colorSurface">@color/grey_1</item>
        <!-- Additional colors -->
        <item name="colorControlNormal">@color/nightPrimaryVariant</item>
        <item name="colorControlActivated">@color/nightPrimaryVariant</item>
        <item name="colorAccent">@color/nightPrimaryVariant</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Date picker style -->
        <item name="android:datePickerDialogTheme">@style/AdaptDateTimePickerStyle</item>
        <item name="android:timePickerDialogTheme">@style/AdaptDateTimePickerStyle</item>
    </style>

    <style name="AdaptDateTimePickerStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorAccent">@color/nightPrimaryVariant</item>
        <item name="colorOnSurface">@color/nightPrimary</item>
        <item name="android:windowBackground">@color/nightBackground</item>
        <item name="android:textColorPrimary">@color/nightPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/nightPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/nightPrimary</item>
        <item name="android:textColorTertiary">@color/nightPrimary</item>
        <item name="android:textColorTertiaryInverse">@color/nightPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DateTimePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DateTimePickerButtonStyle</item>
    </style>

    <style name="DateTimePickerButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/nightPrimary</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>
