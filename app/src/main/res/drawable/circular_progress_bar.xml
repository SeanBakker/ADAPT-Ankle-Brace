<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background circle -->
    <item android:id="@android:id/background">
        <shape android:shape="ring" android:thickness="30dp" android:useLevel="false">
            <solid android:color="@color/grey_2" /> <!-- Background color -->
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>

    <!-- Progress circle -->
    <item android:id="@android:id/progress">
        <shape android:shape="ring" android:thickness="30dp" android:useLevel="true">
            <gradient
                android:type="sweep"
                android:startColor="@color/green_1"
                android:endColor="@color/green_3"
                android:angle="0" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>
</layer-list>
