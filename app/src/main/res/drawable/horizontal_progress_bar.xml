<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the progress bar -->
    <item>
        <shape>
            <solid android:color="@color/grey_2"/> <!-- Background color -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Foreground of the progress bar (actual progress) -->
    <item>
        <clip>
            <shape>
                <solid android:color="?attr/colorPrimaryVariant"/> <!-- Progress color -->
                <corners android:radius="10dp"/> <!-- Rounded corners -->
            </shape>
        </clip>
    </item>
</layer-list>
